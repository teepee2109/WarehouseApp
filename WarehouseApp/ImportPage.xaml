<Page x:Class="WarehouseApp.ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImportPage" Background="#F4F7FC">

    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="1. Thông tin Phiếu nhập" Grid.Row="0" FontWeight="Bold" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Nhà cung cấp:" Grid.Row="0" Grid.Column="0"/>
                <ComboBox x:Name="cbSupplier" Grid.Row="0" Grid.Column="1"
                          DisplayMemberPath="SupplierName"
                          SelectedValuePath="SupplierId"/>

                <Label Content="Nhập về Kho:" Grid.Row="0" Grid.Column="2"/>
                <ComboBox x:Name="cbWarehouse" Grid.Row="0" Grid.Column="3"
                          DisplayMemberPath="WarehouseName"
                          SelectedValuePath="WarehouseId"/>

                <Label Content="Ngày nhập:" Grid.Row="1" Grid.Column="0"/>
                <DatePicker x:Name="dpImportDate" Grid.Row="1" Grid.Column="1"/>

                <Label Content="Người nhập:" Grid.Row="1" Grid.Column="2"/>
                <TextBox x:Name="txtUser" Grid.Row="1" Grid.Column="3" Text="Admin (Demo)" IsEnabled="False"/>

                <Label Content="Ghi chú:" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="txtNote" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="2. Thêm sản phẩm vào phiếu" Grid.Row="1" FontWeight="Bold" Padding="10" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <Label Content="Sản phẩm:"/>
                    <ComboBox x:Name="cbProductSelect" 
                              IsEditable="True" 
                              DisplayMemberPath="ProductName"
                              SelectedValuePath="ProductId"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Label Content="Số lượng:"/>
                    <TextBox x:Name="txtQuantity"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Label Content="Đơn giá nhập (₫):"/>
                    <TextBox x:Name="txtImportPrice"/>
                </StackPanel>

                <Button x:Name="btnAddToList" Grid.Column="3" Content="+ Thêm" 
                        VerticalAlignment="Bottom" 
                        Background="#007ACC" Foreground="White"
                        Click="BtnAddToList_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="3. Chi tiết phiếu nhập" Grid.Row="2" FontWeight="Bold" Padding="10" Margin="0,15,0,0">
            <DataGrid x:Name="dgImportDetails"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="60"/>
                    <DataGridTextColumn Header="Tên Sản phẩm" Binding="{Binding ProductName}" Width="3*"/>
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="1*"/>
                    <DataGridTextColumn Header="Đơn giá nhập" Binding="{Binding Price, StringFormat='{}{0:N0} ₫'}" Width="1.5*"/>
                    <DataGridTextColumn Header="Thành tiền" Binding="{Binding Total, StringFormat='{}{0:N0} ₫'}" Width="1.5*"/>

                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Xóa" Background="Transparent" Foreground="Red" BorderThickness="0"
                                        Click="BtnRemoveFromList_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <Grid Grid.Row="3" Margin="0,15,0,0">
            <TextBlock x:Name="tbTotalAmount" 
                       Text="Tổng cộng: 0 ₫" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Left"
                       FontSize="18" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" Content="Hủy bỏ" Width="120"
                        Click="BtnCancel_Click"/>
                <Button x:Name="btnSave" Content="Lưu Phiếu Nhập" Width="150" 
                        Background="#28A745" Foreground="White" FontWeight="Bold"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
