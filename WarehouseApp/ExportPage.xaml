<Page x:Class="WarehouseApp.ExportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseApp"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="ExportPage" Background="#F4F7FC">

    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="1. Thông tin Phiếu xuất" Grid.Row="0" FontWeight="Bold" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Xuất từ Kho:" Grid.Row="0" Grid.Column="0"/>
                <ComboBox x:Name="cbWarehouse" Grid.Row="0" Grid.Column="1"
                          DisplayMemberPath="WarehouseName"
                          SelectedValuePath="WarehouseId"/>

                <Label Content="Ngày xuất:" Grid.Row="0" Grid.Column="2"/>
                <DatePicker x:Name="dpExportDate" Grid.Row="0" Grid.Column="3"/>

                <Label Content="Người xuất:" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="txtUser" Grid.Row="1" Grid.Column="1" Text="Admin" IsEnabled="False"/>

                <Label Content="Ghi chú:" Grid.Row="1" Grid.Column="2"/>
                <TextBox x:Name="txtNote" Grid.Row="1" Grid.Column="3"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="2. Thêm sản phẩm vào phiếu" Grid.Row="1" FontWeight="Bold" Padding="10" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <Label Content="Sản phẩm:"/>
                    <ComboBox x:Name="cbProductSelect" 
                              IsEditable="True" 
                              DisplayMemberPath="ProductName"
                              SelectedValuePath="ProductId"
                              SelectionChanged="CbProductSelect_SelectionChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <Label Content="Tồn kho hiện tại:"/>
                    <TextBox x:Name="txtStock" IsEnabled="False" FontWeight="Bold" Foreground="Blue"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Label Content="Số lượng xuất:"/>
                    <TextBox x:Name="txtQuantity"/>
                </StackPanel>

                <Button x:Name="btnAddToList" Grid.Column="3" Content="+ Thêm" 
                        VerticalAlignment="Bottom" 
                        Background="#007ACC" Foreground="White"
                        Click="BtnAddToList_Click"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="3. Chi tiết phiếu xuất" Grid.Row="2" FontWeight="Bold" Padding="10" Margin="0,15,0,0">
            <DataGrid x:Name="dgExportDetails"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="60"/>
                    <DataGridTextColumn Header="Tên Sản phẩm" Binding="{Binding ProductName}" Width="4*"/>
                    <DataGridTextColumn Header="Số lượng xuất" Binding="{Binding Quantity}" Width="1.5*"/>

                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Xóa" Background="Transparent" Foreground="Red" BorderThickness="0"
                                        Click="BtnRemoveFromList_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <Grid Grid.Row="3" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" Content="Hủy bỏ" Width="120"
                        Click="BtnCancel_Click"/>
                <Button x:Name="btnSave" Content="Lưu Phiếu Xuất" Width="150" 
                        Background="#FF2A9E12" Foreground="White" FontWeight="Bold"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
