<Page x:Class="WarehouseApp.WareHousePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WareHousePage" Background="#F4F7FC"
      Loaded="Page_Loaded">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                <Label Content="Tìm kiếm:" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBox x:Name="txtSearch" Width="200" Margin="5" Padding="5"/>
                <Button x:Name="btnSearch" Content="Tìm" Width="80" Click="BtnSearch_Click"/>
            </StackPanel>

            <DataGrid x:Name="dgWarehouses" 
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      IsReadOnly="True" 
                      CanUserAddRows="False"
                      SelectionChanged="DgWarehouses_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding WarehouseId}" Width="60"/>
                    <DataGridTextColumn Header="Tên Kho hàng" Binding="{Binding WarehouseName}" Width="1.5*"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="2*"/>

                    <DataGridTemplateColumn Header="Xóa" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnDelete" Content="Xóa" Margin="5,2" 
                                        Background="#DC3545" Foreground="White" Click="BtnDelete_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <GroupBox Grid.Column="1" Header="Thông tin Kho hàng" FontWeight="Bold" Padding="10">
            <StackPanel>
                <Label Content="ID:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtWarehouseId" Margin="0,0,0,10" Padding="5" 
                         IsEnabled="False" Background="#EEEEEE"/>

                <Label Content="Tên Kho hàng (*):" Margin="0,0,0,2"/>
                <TextBox x:Name="txtWarehouseName" Margin="0,0,0,10" Padding="5"/>

                <Label Content="Địa chỉ:" Margin="0,0,0,2"/>
                <TextBox x:Name="txtAddress" Margin="0,0,0,15" Padding="5"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnSave" Grid.Column="0" Content="Lưu" 
                            Background="#28A745" Foreground="White" FontWeight="Bold"
                            Margin="0,0,5,0" Padding="10,5"
                            Click="BtnSave_Click"/>

                    <Button x:Name="btnClear" Grid.Column="1" Content="Làm mới (Thêm)" 
                            Margin="5,0,0,0" Padding="10,5"
                            Click="BtnClear_Click"/>
                </Grid>
            </StackPanel>
        </GroupBox>

    </Grid>
</Page>
