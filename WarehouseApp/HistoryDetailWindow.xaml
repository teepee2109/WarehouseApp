<Window x:Class="WarehouseApp.HistoryDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseApp"
        mc:Ignorable="d"
        Title="Chi tiết Phiếu" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    <Grid Margin="15">
        <DataGrid x:Name="dgDetails"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sản phẩm" Binding="{Binding ProductName}" Width="2*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="1*"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat='{}{0:N0} ₫'}" Width="1.5*"/>
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding Total, StringFormat='{}{0:N0} ₫'}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
